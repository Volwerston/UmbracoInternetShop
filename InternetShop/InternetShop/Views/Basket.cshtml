@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Basket>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Layout12Cols.cshtml";
}

<div id="basket_container">
    <table class="table" id="basket_tbl" style="border: 1px solid black">
        
    </table>
</div>

<div class="row">
    <button disabled="disabled" onclick="location.href='/purchase/'" class="btn btn-success col-sm-4 col-xs-6 col-sm-push-4 col-xs-push-3" id="purchase_button">Purchase</button>
</div>


<div id="removeCheckModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to remove this item from your basket?</p>
      </div>
      <div class="modal-footer">
         <button type="button" id="remove_product_confirm" class="btn btn-success" data-dismiss="modal">Yes</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
      </div>
    </div>

  </div>
</div>

@section otherScripts{
<script type="text/javascript" src="/scripts/basket.js">
</script>
}