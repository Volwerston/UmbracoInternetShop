@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Purchase>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Layout363Cols.cshtml";
}

<h3 style="text-align: center">Purchase form</h3>
<br />
<form id="purchaseForm" class="form-horizontal" data-toggle="validator">
    <div class="form-group">
        <input type="text" name="name" class="form-control" placeholder="Name" required/>
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group">
        <input type="text" name="surname" class="form-control" placeholder="Surname" required/>
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group">
        <input type="email" name="email" class="form-control" placeholder="Email" required/>
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group">
        <input type="text" name="country" class="form-control" placeholder="Country"  required/>
        <div class="help-block with-errors"></div>
    </div>    
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Town" name="town" required/>
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success col-sm-4 col-sm-push-4">Finish</button>
    </div>
</form>

<div id="loadingModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
            <div class="row">
                <div class="col-xs-push-5 col-xs-2">
                    <img src="/Common/Images/ajax-loader.gif" />
                </div>
            </div>
      </div>
    </div>
  </div>
</div>


@section otherScripts{
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.js"></script>
<script type="text/javascript" src="/scripts/purchase.js"></script>
}